<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Movie</h4>
            </div>
            <div class="modal-body">
                <form id="frmMovie">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group col-md-6">
                                <label for="txtTitle">Title</label>
                                <input type="text" class="form-control" id="txtTitle" name="txtTitle" placeholder="Title">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="txtYear">Year of release</label>
                                <input type="number"  class="form-control" id="txtYear" name="txtYear" placeholder="Year of release">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group col-md-6">
                                <label for="selActors">Actors</label>
                                <select id="selActors" name="selActors"></select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="selProducer">Producers</label>
                                <select id="selProducer" name="selProducer"></select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group col-md-6">
                                <label for="txtPlot">Plot</label>
                                <input type="text" class="form-control" id="txtPlot" name="txtPlot" placeholder="Plot">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="txtFile">Poster</label>
                                <input type="file" class="form-control" id="txtFile" name="txtFile">
                            </div>
                            <div class="form-group col-md-2" style="margin-top:14px">
                                <img id="imgPoster" src="" alt="" height="50" width="50"/>
                            </div>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" onclick="SaveMovie()" class="btn btn-success" id="btnMovieSave" >Save Movie</button>
            </div>
        </div>

    </div>
</div>